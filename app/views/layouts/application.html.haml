%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    = favicon_link_tag 'candy.png'

    %title
      = content_for?(:title) ? yield(:title) : "Switter"

  %body{:style => "background-color: #DAD8A7;background-image: url(\"" + image_url("Sprinkles.png") + "\");background-attachment:fixed;"}
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags

    .row
      .large-12.columns 
        .panel#banner
          %h1#brand
            %brackets {
            switter
            %brackets }
    
    .row
      .large-3.columns
        .panel
          #profile-image
            %a#image{:href => "#"}
              %img{:src => image_url("negascott.gif")}
          %h5
            %a{:href => "#"} John Denielle
          .section-container.vertical-nav
          %ul
            %li
              %section.section
                .title
                  =link_to "Home", swits_path
            %li
              %section.section
                .title
                  %a{:href => "#"} Change Password
            %li
              %section.section
                .title
                  %a{:href => "#"} Log out
        .panel
          %h5 Most Recent Door Tags for Ãœ
          -doortags = []
          -@recent.each do |f|
            -f.text.scan(/{(.*?)}/) do |f|
              -doortags << f[0]
            
          -doortags = doortags.uniq

          -doortags.each do |dt|
            %a{href:"/doortag/related?tag=" + dt}= "{" + dt + "}"

      = yield
      = javascript_include_tag "application"

  %footer
    .row.pull-down
      .large-5.columns
        %p
          Powered by:
          Foundation
          %i.fi-foundation.large